<!-- This is the ideal format for our XML, crated for the first entry in aaaaaaaab.xml -->

<add>
<doc> 
    <field name="id"> </field>          <!--Taken from <identifier> -->
    <field name="date"> </field>        <!--Taken from <datestamp> //not the publication date!? -->
    <field name="title"> </field>       <!--Taken from <dc:title> -->
    <field name="author"> </field>      <!--Taken from <dc:creator> -->
    <field name="subject"> </field>     <!--Taken from <dc:subject> -->
    <field name="subject"> </field>     <!-- There will be a varying number of subjects, but this doesn't matter -->
    <field name="text"> </field>        <!--Taken from <dc:description> -->
    <field name="link"> </field>        <!--Taken from <dc:identifier> -->
    <field name="language"> </field>    <!--Taken from <dc:language> -->      
</doc>

</add>

